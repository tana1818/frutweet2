= form_with(model: fruit, local: true) do |form|
  - if fruit.errors.any?
    #error_explanation
      %h2
        = pluralize(fruit.errors.count, "error")
        prohibited this fruit from being saved:
      %ul
        - fruit.errors.full_messages.each do |message|
          %li= message
  .field
    = form.label :name
    = form.text_field :name
  .field
    = form.label :image
    = form.text_field :image
  .actions
    = form.submit
